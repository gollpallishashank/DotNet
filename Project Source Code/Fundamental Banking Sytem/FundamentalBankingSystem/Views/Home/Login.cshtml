@model FundamentalBankingSystem.Models.tbl_Login_details

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<script type="text/javascript">
    function preventback() { window.history.forward(); }
    setTimeout("preventback()", 0);
    window.onunload = function () { null };
</script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container1">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">

                    <div class="panel-heading">
                        <span class="glyphicon glyphicon-lock"></span> Login
                    </div>
                    <div class="panel-body">
                        <form class="form-horizontal" role="form">
                            <div class="text-center">
                                <p class="text-danger">@ViewBag.Message</p>
                            </div>
                            <div class="text-center">
                                <p class="text-danger">@TempData["Message"]</p>
                            </div>

                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-3 control-label">
                                    Username:
                                </label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", @maxlength = "50" } })
                                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="inputPassword3" class="col-sm-3 control-label">
                                    Password:
                                </label>
                                <div class="col-sm-9">
                                    @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @maxlength = "50" } })
                                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group last">
                                <div class="col-sm-offset-3 col-sm-9">
                                    <button type="submit" class="btn btn-success btn-sm">
                                        Log in
                                    </button>
                                    <button type="reset" class="btn btn-warning btn-sm">
                                        Reset
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
}

