@model FundamentalBankingSystem.Models.tbl_TransactionDetails

@{
    ViewBag.Title = "Transfer";
    Layout = "~/Views/Shared/_CashierLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    if (Session["roleid"] != null)
    {
        if (Session["roleid"].ToString() == "2")
        {

        }
        else
        {
            Response.Redirect("Logout");
        }
    }
    else
    {
        Response.Redirect("Logout");
    }



    <div class="container">
        <div class="row">
            <br />
            <center style="font-size:x-large">Transfer Money</center>
            <div class="col-lg-5 col-lg-offset-1 ">


                <img class="img-fluid" src="~/Images/Transfer.jpg" alt="">
            </div>
            <div class="col-lg-4 ">
                <div class="panel1 panel-primary">
                    <div class="panel-heading">
                        Enter Your Details Here
                    </div>
                    <div class="panel-body">
                        <form name="myform">
                            <div class="text-center">
                                <p class="text-danger">@ViewBag.Message</p>
                            </div>
                            <div class="text-center">
                                <p class="text-success">@TempData["Messagesuccess"]</p>
                            </div>
                            <div class="form-group">
                                <label for="myName">Source Account Number</label>
                                <label for="myName" class="text-danger">* </label>
                                @*<input type="email" class="form-control" id="inputEmail3" placeholder="Email" required>*@
                                @Html.EditorFor(model => model.SourceAccNum, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.SrcAcct } })
                                @Html.ValidationMessageFor(model => model.SourceAccNum, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="myName">Destination Account Number</label>
                                <label for="myName" class="text-danger">* </label>
                                @*<input type="email" class="form-control" id="inputEmail3" placeholder="Email" required>*@
                                @Html.EditorFor(model => model.DestinationAccNum, new { htmlAttributes = new { @class = "form-control", @Value = ViewData["DestAcct"] } })
                                @Html.ValidationMessageFor(model => model.DestinationAccNum, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <label for="dob">Amount to be Transferred </label>
                                <label for="dob" class="text-danger">* </label>
                                @Html.Editor("Amount to be Transferred", new { htmlAttributes = new { @class = "form-control", @required = "required", @type = "number", @step = "any", @placeholder = "in $", @Value = ViewBag.Amt } })
                                <span id="error_dob" class="text-danger"></span>
                            </div>
                            <button id="submit" type="submit" value="submit" class="btn btn-success center">Transfer</button>
                            <button type="reset" class="btn btn-warning center">
                                Reset
                            </button>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

