
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<section id="main-slider" class="no-margin" data-ride="carousel">
    <div class="carousel slide">
        <ol class="carousel-indicators">
            <li data-target="#main-slider" data-slide-to="0" class="active"></li>
            <li data-target="#main-slider" data-slide-to="1"></li>
            <li data-target="#main-slider" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="item active" style="background-image: url(../../Images/slider/bg2.jpg)">
                <div class="container">
                    <div class="row slide-margin">
                        <div class="col-sm-6">
                            <div class="carousel-content">
                                <h1 class="animation animated-item-1">Online Banking is an extremely convenient way to access you bank account</h1>
                                <h2 class="animation animated-item-2">Avoid using Internet Banking on shared computers and public places like Cafe's, Libraries.</h2>
                            </div>
                        </div>

                        <div class="col-sm-6 hidden-xs animation animated-item-4">
                            <div class="slider-img">
                            </div>
                        </div>

                    </div>
                </div>
            </div><!--/.item-->
            <div class="item" style="background-image: url(../../Images/slider/bg1.jpg)">
                <div class="container">
                    <div class="row slide-margin">
                        <div class="col-sm-6">
                            <div class="carousel-content">
                                <h1 class="animation animated-item-1">Deposits in our business bank account are covered by the same protections under the Financial Services Compensation Scheme (FSCS) </h1>
                                <h2 class="animation animated-item-2">FSCS protects cash bank deposits held by individual savers.</h2>
                            </div>
                        </div>

                        <div class="col-sm-6 hidden-xs animation animated-item-4">
                            <div class="slider-img">
                            </div>
                        </div>

                    </div>
                </div>
            </div><!--/.item-->

            <div class="item" style="background-image: url(../../Images/slider/bg3.jpg)">
                <div class="container">
                    <div class="row slide-margin">
                        <div class="col-sm-6">
                            <div class="carousel-content">
                                <h1 class="animation animated-item-1">Empowers your device for banking on the go.</h1>
                                <h2 class="animation animated-item-2">Our Mobile App makes banking simpler for you with more than 60 features</h2>
                            </div>
                        </div>
                        <div class="col-sm-6 hidden-xs animation animated-item-4">
                            <div class="slider-img">
                            </div>
                        </div>
                    </div>
                </div>
            </div><!--/.item-->
        </div><!--/.carousel-inner-->
        <a class="prev hidden-xs" href="#main-slider" data-slide="prev">
            <i class="fa fa-chevron-left"></i>
        </a>
        <a class="next hidden-xs" href="#main-slider" data-slide="next">
            <i class="fa fa-chevron-right"></i>
        </a>
    </div><!--/.carousel-->

</section>
<!--/#main-slider-->
<section id="feature">
    <div class="container">
        <div class="center wow fadeInDown">
            <h2>Features</h2>
            <p class="lead">Easy to use, Responsive features, Mobile-first approach <br> Browser compatibility: compatible with all modern browsers</p>
        </div>

        <div class="row">
            <div class="features">
                <div class="col-md-4 col-sm-6 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="600ms">
                    <div class="feature-wrap">
                        <i class="fa fa-home"></i>
                        <font size="5" color="#fff">Home Loans</font>
                        <h4>Pay your EMIs regularly and get a year waived off.</h4>
                    </div>
                </div><!--/.col-md-4-->

                <div class="col-md-4 col-sm-6 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="600ms">
                    <div class="feature-wrap">
                        <i class="fa fa-plane"></i>
                        <font size="5" color="#fff">Offers</font>
                        <h4>Flat 75% OFF on flight bookings! Hurry travel bugs</h4>
                    </div>
                </div><!--/.col-md-4-->

                <div class="col-md-4 col-sm-6 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="600ms">
                    <div class="feature-wrap">
                        <i class="fa fa-eye"></i>
                        <font size="5" color="#fff">Grab Now</font>
                        <h4>Use Code Phoenix100 and get 100% Cashback in Dominos </h4>
                    </div>
                </div><!--/.col-md-4-->

                <div class="col-md-4 col-sm-6 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="600ms">
                    <div class="feature-wrap">
                        <i class="fa fa-comments"></i>
                        <font size="5" color="#fff">Chat With Us</font>
                        <h4>Chat with our Customer Care Executives. <br /> Available 24/7</h4>
                    </div>
                </div><!--/.col-md-4-->

                <div class="col-md-4 col-sm-6 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="600ms">
                    <div class="feature-wrap">
                        <i class="fa fa-cogs"></i>
                        <font size="5" color="#fff">
                            Account Settings
                        </font>
                        <h4>Change your account settings</h4>
                    </div>
                </div><!--/.col-md-4-->

                <div class="col-md-4 col-sm-6 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="600ms">
                    <div class="feature-wrap">
                        <i class="fa fa-heart"></i>
                        <font size="5" color="#fff">Health Insurance</font>
                        <h4>No medical tests on enrolment, for applicants upto 50 years of age. </h4>
                    </div>
                </div><!--/.col-md-4-->
            </div><!--/.services-->
        </div><!--/.row-->
    </div><!--/.container-->
</section>

<script>@*<!--interval for slider-->*@
    $('#main-slider.carousel').carousel({
        interval: 500
    });
</script>

